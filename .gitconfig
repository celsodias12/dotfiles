[user]
  name = Celso Dias
[init]
  defaultBranch = main
[push]
  autoSetupRemote = true
[alias]
  sw = switch
  swc = switch -c

  cm = commit
  cmm = commit -m
  cmam = commit --amend -m
  incm = cmm 'feat: inital commit'
  acmm = !git a . && git cmm
  acmmpu = !git acmm $1 && git push
  cmmpu = !git cmm $1 && git push

  br = branch
  brd = branch -d
  brD = branch -D
  brr = branch -m
  brl = branch --list

  re = reset
  delcm = reset HEAD~1
  reh = reset --hard

  st = stash
  stl = stash list
  stc = stash clear
  stw = stash show
  sts = stash save
  sta = stash apply
  std = stash drop
  stp = stash pop
  asts = !git a . && git sts
  exst = !git a . && git st && git stash show "stash@{0}" -p >stash.patch && git stp
  imst = apply stash.patch

  lg = log --graph
  lga = log --graph --all
  lgo = log --graph --oneline
  lpo = log --pretty=oneline
  lo = log --oneline

  me = merge
  meq = merge --quit

  re = revert HEAD
  pod = push origin -d
  a = add
  cl = clone
  p = pull
  por = pull origin
  fe = fetch

[includeIf "gitdir:~/"]
  path = ~/.gitconfig-me
